<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="ru.kpfu.itis.nikolaev.delivery.ui.fragments.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="ru.kpfu.itis.nikolaev.delivery.ui.fragments.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second" >
        <action
            android:id="@+id/action_secondFragment_to_firstFragment"
            app:destination="@id/firstFragment" />
        <action
            android:id="@+id/action_secondFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />
    </fragment>
    <fragment
        android:id="@+id/thirdFragment"
        android:name="ru.kpfu.itis.nikolaev.delivery.ui.fragments.ThirdFragment"
        android:label="fragment_third"
        tools:layout="@layout/fragment_third" >
        <action
            android:id="@+id/action_thirdFragment_to_fastShippingFragment"
            app:destination="@id/fastShippingFragment" />
        <action
            android:id="@+id/action_thirdFragment_to_mainFragment"
            app:destination="@id/navigation_mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/fastShippingFragment"
        android:name="ru.kpfu.itis.nikolaev.delivery.ui.fragments.FastShippingFragment"
        android:label="fragment_fast_shipping"
        tools:layout="@layout/fragment_fast_shipping" />
    <fragment
        android:id="@+id/navigation_mainFragment"
        android:name="ru.kpfu.itis.nikolaev.delivery.ui.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/navigation_profileFragment"
        android:name="ru.kpfu.itis.nikolaev.delivery.ui.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_qrFragment"
        android:name="ru.kpfu.itis.nikolaev.delivery.ui.fragments.QrFragment"
        android:label="fragment_qr"
        tools:layout="@layout/fragment_qr" />
    <fragment
        android:id="@+id/navigation_sendFragment"
        android:name="ru.kpfu.itis.nikolaev.delivery.ui.fragments.SendFragment"
        android:label="fragment_send"
        tools:layout="@layout/fragment_send" />
    <fragment
        android:id="@+id/navigation_supportFragment"
        android:name="ru.kpfu.itis.nikolaev.delivery.ui.fragments.SupportFragment"
        android:label="fragment_support"
        tools:layout="@layout/fragment_support" />
</navigation>