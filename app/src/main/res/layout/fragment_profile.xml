<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:orientation="vertical"
    tools:context=".presentation.fragments.ProfileFragment">

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/person_svgrepo_com"
        android:layout_marginBottom="12dp"
        />

    <TextView
        android:id="@+id/tv_uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="12dp"
        android:textIsSelectable="true"
        android:textSize="20sp"
        />
    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/til_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_for_et"
        android:layout_marginHorizontal="20dp"

        android:background="@drawable/input_til_drawable"
        app:startIconDrawable="@drawable/baseline_person_24"
        app:endIconMode="clear_text"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:enabled="false"

            android:inputType="text"
            android:layout_marginStart="@dimen/margin_for_et"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout


        android:id="@+id/til_surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_for_et"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/input_til_drawable"
        app:startIconDrawable="@drawable/baseline_person_24"
        app:endIconMode="clear_text"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:enabled="false"

            android:layout_marginStart="@dimen/margin_for_et"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/til_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_for_et"
        android:layout_marginHorizontal="20dp"
        android:hint="@string/write_an_email"
        android:background="@drawable/input_til_drawable"
        app:startIconDrawable="@drawable/baseline_alternate_email_24"
        app:endIconMode="clear_text"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginStart="@dimen/margin_for_et"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            />
    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>