<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/beige"
    tools:context=".presentation.fragments.MainFragment">

    <TextView
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/main" />
    <TextView
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="12dp"
        android:id="@+id/tv_track_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_main"
        android:text="@string/track_order" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_order_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_track_order"

        >


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="@string/enter_your_order_number"
            android:inputType="textPassword"
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="32dp"
        android:id="@+id/tv_my_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/til_order_number"
        android:text="@string/my_orders" />
    <RadioGroup
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:id="@+id/rb_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_my_orders"
        android:gravity="center"
        android:background="@drawable/rounded_group_button_background"

        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_get"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_background"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="мне"
            android:textAppearance="@drawable/rb_text_appearance"
            android:textColor="@drawable/radio_text_color"
            android:textSize="16dp"

            />

        <RadioButton
            android:id="@+id/rb_send"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_background"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="от меня"
            android:textAppearance="@drawable/rb_text_appearance"
            android:textColor="@drawable/radio_text_color"
            android:textSize="16dp"

            />
    </RadioGroup>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parentShimmerLayout"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/rb_group"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

</androidx.constraintlayout.widget.ConstraintLayout>